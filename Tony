<script>
const wiki = {
  meta:{title:"Les Éclats de Vhar'Kûn",generatedBy:"assistant"},
  pages:{
    lore:document.querySelector('#lore')?.innerText||"",
    factions:document.querySelector('#factions')?.innerText||"",
    races:document.querySelector('#races')?.innerText||"",
    eclats:document.querySelector('#eclats')?.innerText||"",
    corruption:document.querySelector('#corruption')?.innerText||"",
    rules:document.querySelector('#rules')?.innerText||"",
    mods:document.querySelector('#mods')?.innerText||"",
    staff:document.querySelector('#staff')?.innerText||"",
    economy:document.querySelector('#economy')?.innerText||"",
    events:document.querySelector('#events')?.innerText||"",
    politics:document.querySelector('#politics')?.innerText||""
  }
};

function downloadJSON(){
  const blob = new Blob([JSON.stringify(wiki,null,2)],{type:'application/json'});
  const url = URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = 'vhar_kun_wiki_export.json';
  document.body.appendChild(a);
  a.click();
  a.remove();
  URL.revokeObjectURL(url);
}
</script>
